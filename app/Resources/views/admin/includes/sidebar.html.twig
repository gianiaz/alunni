<div class="col-md-3 left_col">
    <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
            <a href="#" class="site_title"><i class="fa fa-users"></i>
                <span>Alunni</span></a>
        </div>

        <div class="clearfix"></div>

        <div class="profile">
            <div class="profile_pic">

                <img src="{{ asset('media/gianiaz.png') }}"
                     alt="Giovanni Battista Lenoci" class="img-circle profile_img">
            </div>
            <div class="profile_info">
                <span>{% trans %} default.labels.welcome {% endtrans %}</span>
                <h2>Giovanni Battista Lenoci</h2>
            </div>
        </div>

        <div class="clearfix"></div>

        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
            <div class="menu_section">
                <h3>{% trans %} default.labels.menu {% endtrans %}</h3>
                <ul class="nav side-menu">
                    <li><a href="{{ path('dashboard') }}"><i class="fa fa-home"></i> {% trans %}
                            default.labels.scrivania {% endtrans %}</a></li>

                    <li id="adminMainMenu">
                        <a>
                            <i class="fa fa-cogs"></i> {% trans %}default.labels.amministrazione {% endtrans %}
                            <span class="fa fa-chevron-down"></span>
                        </a>
                        <ul class="nav child_menu" style="display: block">
                            <li><a id="studentsMenu" href="{{ path('students') }}">{% trans %}
                                    default.labels.alunni {% endtrans %}</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <div class="sidebar-footer hidden-small">
            <a data-toggle="tooltip" data-placement="top" title="Logout" href="#">
                <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
            </a>
        </div>
    </div>
</div>
